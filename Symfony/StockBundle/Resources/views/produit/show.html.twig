{% extends 'base.html.twig' %}

{% block body %}
    <link href="{{ asset ('form.css') }}" rel='stylesheet' type='text/css' media="all" />
    <div class="card" style="text-align: -webkit-center; margin: 150px ; margin-right: auto;border: ridge;">
        <h1><b>{{ produit.nom }}</b></h1>
        <img src="{{ produit.url }}" alt="Avatar" style="width:20%">

        <div class="container">

            <p>
            <h4>
            <table>
                <tbody>
                <tr>
                    <th>Prix :</th>
                    <td>{{ produit.prix }}DT</td>
                </tr>
                <tr>
                    <th>Etat :</th>
                    <td>{{ produit.etat }}</td>
                </tr>
                <tr>
                    <th>Size :</th>
                    <td>{{ produit.size }}</td>
                </tr>
                <tr>

                    <th><a href="{{ path('lignecommande_new', { 'id': produit.id }) }}" class="play-icon popup-with-zoom-anim">BUY</a></th>

                </tr>

                </tbody>
            </table>
            </h4>
            </p>

        </div>
    </div>


    <ul>
        <li>
            <a href="{{ path('produit_index') }}">Back to the list</a>
        </li>


    </ul>
{% endblock %}
